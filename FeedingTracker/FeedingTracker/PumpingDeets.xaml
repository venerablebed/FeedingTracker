<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeedingTracker.PumpingDeets">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label x:Name="lblAmount" Text="Amount" FontSize="Large"></Label>
                <Entry x:Name="entAmount" Keyboard="Numeric" WidthRequest="100"></Entry>
            </StackLayout>
            <Button x:Name="btnSavePumping" HorizontalOptions="Center" Text="Save Pumping" Clicked="btnSavePumping_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>